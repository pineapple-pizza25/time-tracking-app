<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/btnBrowseCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse Categories"
        app:layout_constraintBottom_toTopOf="@id/btnBrowseCategories"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btnBrowseTimesheetEntries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse Timesheet Entries"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBrowseTimesheetEntries"
        tools:ignore="NotSibling" />

    <Button
        android:id="@+id/btnSetDailyGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Daily Goals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBrowseTimesheetEntries" />

</androidx.constraintlayout.widget.ConstraintLayout>